# Supabase Configuration (Required)
# Get these from your Supabase project dashboard: https://app.supabase.com
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Application Configuration (Required)
VITE_APP_URL=http://localhost:3000

# Development Server Configuration
VITE_DEV_PORT=3000

# Authentication & Session (Optional - defaults shown)
# Set to 'false' to disable session persistence (dev mode)
VITE_SUPABASE_PERSIST_SESSION=true

# localStorage key for authentication token
VITE_SUPABASE_STORAGE_KEY=ordak-auth-token

# Development & Mocks (Optional - defaults shown)
# Set to 'true' ONLY for offline development with mock data
VITE_USE_MOCKS=false

# Demo Mode (Optional - should NEVER be true)
# Emergency demo mode flag - disabled by default
VITE_SUPERVISOR_DEMO_LOGIN=

# Error Monitoring (Optional - recommended for production)
# Get from Sentry dashboard after creating project
VITE_SENTRY_DSN=

# Feature Flags (Optional - future use)
# Enable Shopify order sync integration
VITE_ENABLE_SHOPIFY_SYNC=false
